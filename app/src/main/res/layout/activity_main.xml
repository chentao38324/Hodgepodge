<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <Button
            android:id="@+id/btn_photos_wall"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="照片墙"
            android:layout_margin="2dp"
            android:background="@drawable/button"

            />
        <Button
            android:id="@+id/btn_photo_wall_falls"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="照片墙（瀑布流）"
            android:layout_margin="2dp"
            android:background="@drawable/button"

            />
        <Button
            android:id="@+id/btn_pic_load"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="图片加载框架"
            android:layout_margin="2dp"
            android:background="@drawable/button"

            />
        <Button
            android:id="@+id/btn_bk"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="ButterKnifeTest"
            android:textAllCaps="false"
            android:layout_margin="2dp"
            android:background="@drawable/button"

            />
        <Button
            android:id="@+id/btn_scroller"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="ScrollerLayout"
            android:textAllCaps="false"
            android:layout_margin="2dp"
            android:background="@drawable/button"

            />
    </LinearLayout>
</ScrollView>