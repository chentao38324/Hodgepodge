<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/iv_display_glide"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:gravity="center"
        android:src="@drawable/loading"
        />
    <ImageView
        android:id="@+id/iv_display_picasso"
        android:layout_toRightOf="@id/iv_display_glide"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:gravity="center"
        android:src="@drawable/loading"
        />
    <ImageView
        android:id="@+id/iv_display_fresco"
        android:layout_marginTop="200dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:gravity="center"
        android:src="@drawable/loading"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity=""
        >
        <Button
            android:onClick="glide"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="Glide"
            android:textAllCaps="false"
            android:background="@drawable/button"
            android:layout_margin="5dp"
            />
        <Button
            android:onClick="picasso"
            android:background="@drawable/button"

            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="Picasso"
            android:textAllCaps="false"
            android:layout_margin="5dp"
            />
        <Button
            android:onClick="fresco"
            android:background="@drawable/button"
            android:layout_margin="5dp"

            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="50dp"
            android:text="Fresco"
            android:textAllCaps="false"/>
    </LinearLayout>

</RelativeLayout>